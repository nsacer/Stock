<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.LoginActivity">

    <ImageView
        android:id="@+id/ivCloseLoginAct"
        android:layout_width="@dimen/iconWidth"
        android:layout_height="@dimen/iconWidth"
        android:contentDescription="@null"
        android:scaleType="centerInside"
        android:src="@drawable/ic_baseline_close_24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/glLoginBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.8" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvPhoneNumLoginAct"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="6.18"
        android:text="@string/loginPhoneNum"
        android:background="@drawable/shape_btn"
        android:gravity="center"
        android:layout_marginHorizontal="64dp"
        app:layout_constraintBottom_toTopOf="@+id/glLoginBtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/ivWeChatLoginAct"
        android:contentDescription="@null"
        app:layout_constraintTop_toBottomOf="@+id/glLoginBtn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:scaleType="centerInside"
        android:layout_marginTop="16dp"
        android:padding="8dp"
        android:layout_width="@dimen/iconWidth"
        android:layout_height="@dimen/iconWidth"
        android:src="@mipmap/wechat_chat"/>

</androidx.constraintlayout.widget.ConstraintLayout>